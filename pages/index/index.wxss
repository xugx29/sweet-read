/**index.wxss**/
.searchInput,.searchButton{
  display: inline-block
}
.searchContainer{
  padding:0 22rpx;
  margin:15rpx 0;
}
.searchInput{
  width:552rpx;
  background: #f2f2f2;
  height:60rpx;
  border-radius: 28rpx;
  padding:0 10rpx;
  font-size:27rpx;
  color:#858689;
  text-align: center;
}
.searchButton{
  height:60rpx;
  line-height: 60rpx;
  font-size:27rpx;
  margin-left:22rpx;
  border: 0;
}
/* .placeholderClass{
  text-align: center
} */
.navigatorContainer{
  width:100%;
  height:100%;
}
.slideImage{
  display: inline-block;
  width:100%;
  height:100%;
}
swiper{
  height:270rpx;
}
.menuContainer{
  display: flex;
  padding:0rpx 10rpx;
}
navigator.menuItemContainer{
  display: flex;
  flex-direction: column;
  flex: 1;
  height:190rpx;
  justify-content:center;
  align-items:center;
}
.menuItem{
  display: flex;
  flex-direction: column;
  flex: 1;
  height:190rpx;
  justify-content:center;
  align-items:center;
}
.menuItem image{
  width:95rpx;
  height:95rpx;
}
.menuItem text{
  margin-top:10rpx;
  font-size: 26rpx;
}
.listContainer{
  padding:0 30rpx;
}
.titleContainer{
  height:60rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items:center;
}
.TitleColorIcon{
  background: #ff773d;
  width:13rpx;
  height:25rpx;
  margin-right:10rpx;
}
.itemImage{
  overflow: hidden;
}
.itemImage image{
  float:left;
  display: inline-block;
  width:200rpx !important;
  border: #e4007f;
  border-radius: 15rpx;
}
.itemContent{
  width:calc(100% - 200rpx);
  margin-left:20rpx;
  display: flex;
  flex-direction: column;
}
.itemContent .articleTitle{
  color:#333;
  margin-top:5rpx;
  margin-bottom: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content:space-between; */
}
.articleAuthor{
  font-size:0.85em;
  color:#555;
  margin-bottom: 10rpx;
}
.articleDesc{
  font-size:0.85em;
  color:#888;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3; 
  overflow: hidden;
  line-height: 1.5;
}
.bookTypeTarget{
  padding:0rpx 5rpx;
  height:25rpx;
  line-height: 25rpx;
  border:1px solid #ff773d;
  font-size:.47em;
  color:#ff773d;
  min-width:80rpx;
  text-align: center
}
.titleContent{
  margin-right:15rpx;
  /* flex:1; */
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.border-bottom-1px-ccc{
  border-bottom: 1rpx solid #ccc;
  margin-top:28rpx;
}
.normalList{
  align-items: center;
  display:flex;padding:20rpx 0;
  margin:0 !important;
}
.normalListTitle{
  font-size:.8em;
  margin-left:15rpx;
  color:#333;
  flex: 1;
  margin-right:30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.normalListAuthor{
  font-size:.65em;
  color:#666;
  flex: 0.3;
}
.picAndText{
  display: flex;
  flex-flow: row wrap;
}
.picAndTextItem{
  width:30%;
  margin-top:10rpx;
  padding-right:4.99995%;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
}
.picAndTextItem:nth-child(3n){
  padding:0;
}
.picAndTextItem image{
  width:100%;
}
.picAndTextItem text{
   font-size:0.88em;
    display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
  line-height: 1.5;
}
view.ad{
  margin:20rpx 0;
}
view.ad image{
  width:100%;
}