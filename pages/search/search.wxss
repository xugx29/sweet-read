/* pages/search/search.wxss */
.searchContainer{
  padding:0 35rpx;
  margin:15rpx 0;
}
.searchArea{
  position: relative;
  display: flex;
  justify-content: space-between;
  align-content: center;
  align-items: center;
}
.searchInput{
  display:inline-block;
  width:100%;
  box-sizing: border-box;
  background:#f2f2f2;
  height:70rpx;
  font-size:27rpx;
  color:#333;
  text-align:left;
  padding:0 0 0 60rpx;
}
.searchButton{
  display: block;
  height:60rpx;
  line-height:60rpx;
  font-size:27rpx;
  margin-left:22rpx;
  border-color:transparent;
  background: transparent;
}
.searchIcon{
  width:30rpx;
  height:31.4rpx;
  position: absolute;
  top:50%;
  left:20rpx;
  transform: translateY(-50%)
}
.clearIcon{
  display: inline-block;
  width:25rpx;
  height:25rpx;
  position: absolute;
  top:50%;
  right:30rpx;
  transform: translateY(-50%);
  z-index:10;
}