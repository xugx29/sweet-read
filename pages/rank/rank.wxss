
.swiper-tab{
  width: 100%; 
  text-align: center; 
  line-height: 60rpx;
  display: flex;
}
.swiper-tab-item{
  width:20%;
  border:1px solid #666;
  border-radius: 10rpx;
  font-size: .85em;
  margin:0 19rpx;
}
.active{
  color:#fff;
  background: #ff773d;
  border-color:#ff773d;
}
.rankSwiper{
  padding-top:20rpx;
}
.bookContainer{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  position: relative;
}
view .listItem{
  padding-top:26rpx;
  border-top: 1rpx solid #ccc;
}
view .listItem:first-child{
  border: 0;
}
.itemImage{
  overflow: hidden;
}
.itemImage image{
  float:left;
  display: inline-block;
  width:200rpx !important;
  border: #e4007f;
  border-radius: 15rpx;
}
.itemContent{
  width:calc(100% - 200rpx);
  margin-left:20rpx;
  display: flex;
  flex-direction: column;
}
.itemContent .articleTitle{
  color:#333;
  margin-top:10rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content:space-between; */
}
.bookInfo{
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items:center;
}
.articleAuthor{
  font-size:0.85em;
  color:#555;
}
.articleDesc{
  font-size:0.85em;
  color:#888;
  display: -webkit-box; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 3; 
  overflow: hidden;
  line-height: 1.5;
}
.titleContent{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-weight: bold;
}
.count{
  display: flex;
  align-items:center;
}
.type{
  padding:0rpx 5rpx;
  height:25rpx;
  line-height: 25rpx;
  border:1px solid #ff773d;
  font-size:.47em;
  color:#ff773d;
  min-width:80rpx;
  margin-right:10rpx;
  text-align: center;
}
.countNum{
  padding:0rpx 10rpx;
  height:25rpx;
  line-height: 25rpx;
  border:1px solid #4687e8;
  font-size:.47em;
  color:#4687e8;
  min-width:40rpx;
  text-align: center;
}