/* pages/article.wxss */
.articleContainer{
  background: #ede8d4;
  min-height:100vh;
  position: relative;
}
.articleTitle{
  font-size:1.2em;
  font-weight: bold;
  color:#895b42;
  display: block;
  margin:25rpx 0;
}
rich-text{
  font-size:2em;
  padding-bottom:30rpx;
  text-align: justify;
}
.duanluo{
  text-indent: 70rpx;
}
.operationArea{
  margin-bottom:20rpx;
  display:flex;
  justify-content: space-between;
  align-content:center;
  align-items:center;
}
.operationArea view{
  text-align: center;
  padding:20rpx 0;
  font-size:.9em;
}
.prev,.next{
  width:31%;
  color:#ff773d;
  border:1rpx solid #ff773d;
}
.catalog{
  width:28%;
  background: #ff773d;
  color:#fff;
  border:1rpx solid #ff773d;
}
.bottomMenu{
  position:absolute;
  bottom:0;
  left:0;
  width:100%;
  height:140rpx;
  background:#fff;
  display: flex;
  align-content: center;
  align-items: center;
}
.menuIcon{
  width:45rpx;
  height:45rpx;
  margin-bottom: 5rpx;
}
.item{
  width:20%;
  /* height:100rpx; */
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-content:center;
  align-items:center;
  font-size:.9em;
}
.light,.moon{
  display: none;
}
.night{
  background: #141417;
  color:#424351;
}
.night .articleTitle{
  color:#424351;
}


.settingContainer{
  padding:0 40rpx 0 80rpx;
  height:350rpx;
  position: absolute;
  left:0;
  display: flex;
  flex-direction: column;
  width:100%;
  bottom:140rpx;
  border-bottom:1rpx solid #eee;
  background: #fff;
  box-sizing: border-box;
  justify-content:center;

}
.fontSize{
  width:38rpx;
}
.jia{
  height:38rpx;
}
.jian{
  height:5.79rpx;
}
.jiajian{
  height:60rpx;display:flex;
  justify-content: center;
  align-content: center;
  align-items: center;
}
.fontSizeContent,.backgroundContent{
  display: flex;
  align-content: center;
  align-items: center;
  justify-content: space-between;
}
.backgroundContent{
  margin-top:40rpx;
}
.desc{
  font-size:.94em;
  width:80rpx;
}
.itemInfo{
  flex: 1;
  display: flex;
  padding:0 60rpx 0 50rpx;
  justify-content: space-between;
  align-content: center;
  align-items: center;
}
.bgItem{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  margin:0 20rpx;
}
.bgItem.choose{
  border:2rpx solid #ff773d;
}
